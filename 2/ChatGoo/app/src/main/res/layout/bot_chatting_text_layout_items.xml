<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/income_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/assistant_logo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/assistant"
            app:civ_border_color="#787878"
            app:civ_border_width="3dp"
            android:layout_marginTop="8dp"
            android:layout_marginStart="8dp"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/income_response"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/income"
            android:layout_marginStart="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="40dp"
            android:textSize="18sp"
            android:paddingEnd="33dp"
            android:paddingStart="33dp"
            android:paddingBottom="25dp"
            android:textColor="#5e5e5e"
            android:visibility="gone"
            />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/outcome_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/outcome_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_marginStart="20dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:gravity="start"
            android:background="@drawable/outcome_bg"
            android:padding="5dp"
            android:visibility="gone"
            />

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>